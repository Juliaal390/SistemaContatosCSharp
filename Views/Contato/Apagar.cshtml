@model ContatoModel

@{
    ViewData["Title"] = "Apagar";
}
<div>
    <h3>Deseja mesmo apagar o contato (@Model.Nome)?</h3>
</div>

<a class="btn btn-primary" role="button" asp-route-id="@Model.Id" asp-controller="Contato" asp-action="ApagarConfirmacao">Confirmar</a>
<a class="btn btn-danger" role="button" asp-controller="Contato" asp-action="Index">Cancelar</a>