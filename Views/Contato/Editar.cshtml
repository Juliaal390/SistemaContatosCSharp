@model ContatoModel

@{
    ViewData["Title"] = "Editar";
}
<div class="text-center">
    <h1 class="display-4">Editar contato</h1>
</div>
<form asp-controller ="Contato" asp-action="Alterar" asp-route-id="@Model.Id" method="post">
    @* Você tamém pode excluir o asp-route-id da tag form e colocar 
um input do tipo hidden e asp-for="Id"
    *@

    <div class="form-group">
        <label for="exampleInputEmail1">Nome</label>
        <input asp-for="Nome" type="text" class="form-control">
    </div>

    <div class="form-group">
        <label for="exampleInputEmail1">Email</label>
        <input asp-for="Email" type="text" class="form-control">
    </div>

    <div class="form-group">
        <label for="exampleInputEmail1">Celular</label>
        <input asp-for="Celular" type="text" class="form-control">
    </div>
    <button type="submit" class="btn btn-primary my-4">Alterar</button>
    <a class="btn btn-secondary" asp-controller="Contato" asp-action="Index" role="button">Voltar</a>
</form>

