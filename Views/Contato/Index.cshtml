@model List<ContatoModel>

@{
    Layout = "_Layout";
    ViewData["Title"] = "Contatos";
}

<div class="text-center">
    <div class="d-grid gap-2 d-md-flex justify-content-md-start">
        <a class="btn btn-primary" role="button"
        asp-controller="Contato" asp-action="Criar"
        >Adicionar novo contato</a>
    </div>

    @if(TempData["Sucesso"] != null){
    <div class="alert alert-success" role="alert">
        <button type="button" class="btn btn-danger btn-sm close-alert" arial-label="close">X</button>
            @TempData["Sucesso"]
    </div>
    }


    @if (TempData["Erro"] != null)
    {
        <div class="alert alert-danger" role="alert">
            <button type="button" class="btn btn-danger btn-sm close-alert" arial-label="close">X</button>
            @TempData["Erro"]
        </div>
    }

    <h1 class="display-4">Contatos</h1>

    <table class="table" id="table-contatos">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Nome</th>
                <th scope="col">Email</th>
                <th scope="col">Celular</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @if(Model !=null && Model.Any())
            {
                foreach(ContatoModel contato in Model)
                {
                <tr>
                <th scope="row">@contato.Id</th>
                <td>@contato.Nome</td>
                <td>@contato.Email</td>
                <td>@contato.Celular</td>
                <td>
                    <div class="btn-group" role="group" aria-label="Basic example">
                        <a role="button" asp-controller="Contato" asp-route-id="@contato.Id" asp-action="Editar" class="btn btn-primary">Editar</a>
                        <a role="button" asp-controller="Contato" asp-route-id="@contato.Id" asp-action="Apagar" class="btn btn-danger">Excluir</a>
                    </div>
                </td>
                 </tr>
                }
            }
        </tbody>
    </table>
</div>
