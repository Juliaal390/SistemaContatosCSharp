@model UsuarioModel

@{
    ViewData["Title"] = "Apagar usuário";
}
<div>
    <h3>Deseja mesmo apagar o usuário (@Model.Nome)?</h3>
</div>

<a class="btn btn-primary" role="button" asp-route-id="@Model.Id" asp-controller="Usuario" asp-action="ApagarConfirmacao">Confirmar</a>
<a class="btn btn-danger" role="button" asp-controller="Usuario" asp-action="Index">Cancelar</a>
