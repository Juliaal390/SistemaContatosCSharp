@model UsuarioModel;
@using CrudMVC.Enums;

@{
    ViewData["Title"] = "Editar Usuário";
}
<div class="text-center">
    <h1 class="display-4">Editar usuário</h1>
</div>
<form asp-controller ="Usuario" asp-action="Alterar" method="post">
    @* Você tamém pode excluir o asp-route-id da tag form e colocar 
um input do tipo hidden e asp-for="Id"
    *@
    <div>
        <input asp-for="Id" type="hidden" class="form-control">
    </div>

    <div class="form-group">
        <label for="exampleInputEmail1">Nome</label>
        <input asp-for="Nome" type="text" class="form-control">
        @Html.ValidationMessageFor(x => x.Nome)
    </div>

    <div class="form-group">
        <label for="exampleInputEmail1">Email</label>
        <input asp-for="Email" type="text" class="form-control">
        @Html.ValidationMessageFor(x => x.Email)
    </div>

    <div class="form-group">
        <label for="exampleInputEmail1">Login</label>
        <input asp-for="Login" type="text" class="form-control">
        @Html.ValidationMessageFor(x => x.Login)
    </div>

    <div class="form-group">
        <label for="exampleInputEmail1">Perfil</label>
        <select asp-for="Perfil" class="form-control">
            <option value="0">Selecione</option>
            <option value="@PerfilEnum.Admin">Admin</option>
            <option value="@PerfilEnum.Padrao">Padrão</option>
        </select>
        @Html.ValidationMessageFor(x => x.Perfil)
    </div>

    <button type="submit" class="btn btn-primary my-4">Alterar</button>
    <a class="btn btn-secondary" asp-controller="Usuario" asp-action="Index" role="button">Voltar</a>
</form>

